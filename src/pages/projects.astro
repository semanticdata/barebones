---
import { getCollection } from "astro:content";

import BaseLayout from "@/layouts/BaseLayout.astro";

import Project from "@/components/Project.astro";
import SeoPage from "@/components/SeoPage.astro";

const projects = (await getCollection("projects")).sort((b, a) =>
  b.data.title.localeCompare(a.data.title),
);
---

<BaseLayout>
  <SeoPage slot="head" title="Projects" />
  <h1 class="mb-4 animate">Projects</h1>
  <section class="animate">
    <ul class="gap-2 grid p-0 list-none">
      {projects.map((project) => <Project project={project} />)}
    </ul>
  </section>
</BaseLayout>
