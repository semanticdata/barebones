---
import { ClientRouter } from "astro:transitions";
import { SITE } from "@siteConfig";
---

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="HandheldFriendly" content="True" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.title}
    href={new URL("rss.xml", Astro.site)}
  />

  <!-- Favicons -->
  <link
    rel="apple-touch-icon-precomposed"
    sizes="180x180"
    href="/apple-touch-icon.png"
  />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

  <!-- Fallback for non-JS. This implements a "basic" version of the `animate` class. -->
  <noscript>
    <style>
      .animate {
        animation: fadeInUp 0.3s ease-in-out forwards;
      }
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(-0.75rem);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </noscript>

  <ClientRouter />

  <script>
    import { initThemeScript } from "@lib/themeInit";
    import { initCopyCode } from "@lib/copyCodeInit";

    initThemeScript();
    initCopyCode();
  </script>

  <slot />

  {
    import.meta.env.PROD && (
      <script
        is:inline
        defer
        src="https://umami.itscattime.com/script.js"
        data-website-id="318e1daa-1e0a-4708-91ff-27284b592659"
      />
    )
  }
</head>
