---
import { NAV_LINKS, SITE } from "@/siteConfig.ts";
import Link from "./Link.astro";
---

<header class="flex flex-col items-start pb-8">
  <a
    href="/"
    class="dark:border-white/20 bg-black/5 hover:bg-black dark:hover:bg-white dark:bg-white/5 shadow-sm my-4 px-2 py-1 border border-black rounded focus:ring focus:ring-purple-900 dark:focus:ring-purple-900 focus:ring-offset-2 font-medium text-black text-sm hover:text-white dark:hover:text-black focus:text-black dark:focus:text-purple-100 dark:text-white no-underline transition-colors duration-300 focus:outline-none"
    >{SITE.title}</a
  >
  <nav>
    <ul class="flex gap-2 p-0 list-none">
      {
        Object.keys(NAV_LINKS).map((navItemKey) => {
          return (
            <li>
              <Link href={NAV_LINKS[navItemKey].path}>
                {NAV_LINKS[navItemKey].label}
              </Link>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>
